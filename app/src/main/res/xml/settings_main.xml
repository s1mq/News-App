<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:defaultValue="@string/settings_keyword_default"
        android:inputType="textCapWords"
        android:key="@string/settings_keyword_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_keyword_label" />

    <EditTextPreference
        android:defaultValue="@string/settings_newsitem_list_size_default"
        android:inputType="number"
        android:key="@string/settings_newsitem_list_size_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_newsitem_list_size_label" />

</PreferenceScreen>